            <form class="form">
                <div class="input-group">
                    <label for="name">Full Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="John Doe"
                        required
                    >
                </div>

                <div class="input-group">
                    <label for="email">Email Address</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="john@example.com"
                        required
                    >
                </div>

                <div class="input-group">
                    <label for="dob">Date of Birth</label>
                    <input
                        type="date"
                        id="dob"
                        name="DOB"
                        required
                    >
                </div>

                <button type="submit" class="btn-primary">
                    Save Birthday ğŸ‚
                </button>
            </form>

            <footer class="footer">
                <p>
                    Your birthday is safe with us ğŸ’™  
                    We'll send the love right on time.
                </p>
            </footer>

        </section>

        <div id="announcementContainer"></div>
    </main>

    <script src="/js/addAnnouncement.js"></script>
<script src="/js/home.js"></script>
</body>
</html>
